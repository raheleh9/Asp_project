@using Asp_project.Models;
@model Teacher;
<form action="/Teacher/Edit" method="post">
    <input type="hidden" value="@Model.Id" name="id" />
    <div class="form-group mt-3">
        <label for="Name">نام</label>
        <input type="text" name="firstname" value="@Model.FirstName" class="form-control" id="name" aria-describedby="emailHelp"

    </div>
    <div class="form-group mt-3">
        <label for="lastname">نام خانوادگی</label>
        <input type="text" name="lastname" value="@Model.LastName" class="form-control" id="lastname"

        <div class="form-group m-3">
            <label for="nationalcode">کدملی</label>
            <input type="text" name="nationalcode" value="@Model.NationalCode" class="form-control" id="nationalcode"
        </div>
        <div class="form-group mt-3">
            <label for="phonenumber1"> شماره تماس</label>
            <input type="text" name="phonenumber" value="@Model.PhoneNumber" class="form-control" id="phonenumber"
        </div>
        <div class="form-group mt-3">
            <label for="teacherarea"> حوزه تدریس</label>
            <textarea class="form-control" name="teachingArea" id="teachingArea"></textarea>
        </div>


        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-warning">ویرایش</button>

</form>